{
  "name": "phpjuice/pest-plugin-vcr",
  "description": "Integrates Pest with PHP-VCR",
  "keywords": [
    "phpjuice",
    "pest-plugin-vcr"
  ],
  "homepage": "https://github.com/phpjuice/pest-plugin-vcr",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Mohammed",
      "email": "mohammed@amalyet.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "php-vcr/php-vcr": "^1.5"
  },
  "require-dev": {
    "pestphp/pest": "^1.17",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "PHPJuice\\PestPluginVcr\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPJuice\\PestPluginVcr\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage"
  },
  "config": {
    "sort-packages": true
  }
}
